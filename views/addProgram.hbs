
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Add Program</h2>
            <form method="post" action="/programs/add">
            <fieldset>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="programCode">Program Code:</label>
                            <input class="form-control" id="programCode" name="programCode" type="text" >
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="programName">Program Name:</label>
                            <input class="form-control" id="programName" name="programName" type="text" >
                        </div>
                    </div>
                </div>
                <input type="submit" class="btn btn-primary pull-left" value="Add Program">
            </form>
        </div>
    </div>
</div>